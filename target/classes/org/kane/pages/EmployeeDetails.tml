<html title="Employee Details | EMS"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<head>
<style>

    .employee-container{

     display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            border: 2px solid #ccc;
            padding: 20px;
            border-radius: 7px;
            max-width: 1000px;
            margin: auto;
            box-sizing: border-box;
             box-shadow: 5px 10px #888888;
            margin-top: 50px;

    }
.headings{
    flex:1;
   }

.details{
   flex:1;
  }


    .item{
  margin-bottom: 15px;
            text-align: left;
            font-size: 16px;
    }

      a {
            color: #007bff;
            text-decoration: none;
        }

       a:hover {
            text-decoration: underline;
        }

    .previous{
 position: absolute;
            top: 10px;
            left: 10px;
            margin: 0;
            font-size: 10px;
    }

</style>
</head>
<body class="container" style="background-color:#CF978B;">
<div>
    <h1><i>Employee details</i></h1>
</div>
<div class="employee-container">
    <div class="headings">
        <t:if test="employee">
            <div class="item">
                <p><strong>ID </strong></p>
            </div>
            <div class="item">
                <p><strong>User Name </strong></p>
            </div>
            <div class="item">
                <p><strong>Email ID </strong></p>
            </div>
            <div class="item">
                <p><strong>Age </strong></p>
            </div>
            <div class="item">
                <p><strong>Contact No. </strong></p>
            </div>
            <div class="item">
                <p><strong>Address </strong></p>
            </div>
            <div class="item">
                <p><strong>Roles </strong></p>
            </div>
        </t:if>
    </div>

    <div class="details">
        <t:if test="employee">
            <div class="item">
                <p>${employee.empId}</p>
            </div>
            <div class="item">
                <p>${employee.uname}</p>
            </div>
            <div class="item">
                <p>${employee.email}</p>
            </div>
            <div class="item">
                <p>${employee.age}</p>
            </div>
            <div class="item">
                <p>${employee.phone}</p>
            </div>
            <div class="item">
                <p>${fullAddress}</p>
            </div>
            <div class="item">
                <p>${employeeRoles}</p>
            </div>
        </t:if>
    </div>

</div>
<div class="previous">
    <p><t:pagelink t:page="EmployeesList">&lt;&lt; Click Here </t:pagelink> to go back to employees list!</p>
</div>
</body>
</html>