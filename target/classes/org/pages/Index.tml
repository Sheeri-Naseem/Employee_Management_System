<html title="Login | Employee Management System"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<!--        t:type="header"-->

<!--<p:style>-->
<style>
  .login-container {
  width: 50%;
  margin-left: auto;
  margin-right:auto;
    background-color: #fff;
    padding: 2rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    justify-content: center;
}

.login-container h3 {
    margin-bottom: 1.5rem;
    color: #333;
}

.input-group {
    margin-bottom: 1rem;
    text-align: left;
}

.input-group label {
    display: block;
    margin-bottom: 1rem;
    color: #555;
    font-size: 1.5rem;
}

.input-group input {
    width: auto;
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1.5rem;
}

.login-button {
    width: 100%;
    padding: 1rem;
    margin: 1rem;
    background-color: #007bff;
    border: none;
    border-radius: 5px;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
}

.login-button:hover {
    background-color: #0056b3;
}

.reset-button {
    width: 100%;
    padding: 1rem;
    margin: 1rem;
    background-color: #F93A11;
    border: none;
    border-radius: 5px;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
}

.reset-button:hover {
    background-color: #C02C0D;
}
<!--</p:style>-->
</style>

<!--<div t:id="header"/>-->

<body class="container" style="text-align:center; background-color:#CF978B">

<!--<div class="container" style="text-align:center">-->
  <h1>Employee Management System</h1>
<br/>
    <div class="login-container" style="border: 1px solid black;">
        <h3><i>Login Here ! </i></h3>
        <t:form t:id="loginForm" style="margin-left: auto; margin-right:auto">
            <div class="form-group">
<!--                <t:label for="username">Username</t:label>-->
                <t:textfield t:id="username" t:mixins="formgroup"/>
            </div>

            <div class="form-group">
<!--                <t:label for="password">Password</t:label>-->
                <t:passwordfield t:id="password" t:mixins="formgroup"/>
            </div>

<div><t:errors/></div>

            <div class="form-group col-sm-6 col-sm-offset-3">
            <t:submit class="btn btn-primary login-button" value="Login" />
           </div>
            <hr/>


        </t:form>
    </div>

</body>
</html>